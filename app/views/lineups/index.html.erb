	<div id='exposure' class='small-12 columns lineup-group'>
	<% @exposure.each do |pos, arr| %>
		<div class="small-6 medium-4 large-4 columns lineup">
			<h5><%=pos%></h5>
			<ul>
			<% for i in 0...arr.count do %>
				<li><%=arr[i]['name']%>:<%=arr[i]['perc'].round(1)%>%</li>
			<% end %>
			</ul>
		</div>
	<% end %>
	</div>
	<div id='scores' class='small-12 columns lineup-group'>
	<% @scores.each do |cat, obj| %>
		<div class='small-2 medium-2 large-2 columns lineup'>
			<h5><%=cat%></h5>
			<ul>
				<li>Average: <%=obj['avg'].round(2)%></li>
				<li>Total: <%=obj['total'].round(2)%></li>
			</ul>
		</div>
	<% end %>
	</div>
