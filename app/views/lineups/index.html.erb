					<li>Low Score: <%=@rl[i].min_score.floor%></li>
				</ul>
				<h5>Total Budget</h5>
				<p>$<%=@rl[i].price%></p>
			</div>
		<%end%>
		</div>
	</div>
	<div id="low-lineups" class="small-12 columns lineup-group">	
		<h2>Lowest Risk Lineups</h2>
		<div class="row">
			<%for i in 0...6 do %>
