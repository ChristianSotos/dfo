<div id="container" class="row">
	<div id="avg-lineups" class="small-12 columns lineup-group">
		<h2>Best Overall Lineups</h2>
		<div class="row">
		<%for i in 0...6 do %>
			<div class="small-6 medium-4 large-2 columns lineup">
				<h5>Lineup <%=i+1%></h5>
				<ul>
				<% for j in 0...@ol[i].roster.count do%>
					<li><%=@ol[i].roster[j].position%>: <%=@ol[i].roster[j].name%></li>
				<%end%>
				</ul>
				<h5>Scores</h5>
				<ul>
					<li>Average Score: <%=@ol[i].avg_score.floor%></li>
					<li>High Score: <%=@ol[i].max_score.floor%></li>
					<li>Low Score: <%=@ol[i].min_score.floor%></li>
				</ul>
				<h5>Total Budget</h5>
				<p>$<%=@ol[i].price%></p>
			</div>
		<%end%>
		</div>
	</div>
	<div id="high-lineups" class="small-12 columns lineup-group">
		<h2>Highest Ceiling Lineups</h2>
		<div class="row">
			<%for i in 0...6 do %>
