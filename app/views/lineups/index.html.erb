<div id="container" class="row">
	<div id="all-lineups" class="small-12 columns lineup-group">
		<h2>All Lineups</h2>
		<div class="row">
		<%for i in 0...@lineups.count do %>
			<div class="small-6 medium-4 large-2 columns lineup">
				<h5>Lineup <%=i+1%></h5>
				<ul>
				<% for j in 0...@lineups[i].roster.count do%>
					<li><%=@lineups[i].roster[j].position%>: <%=@lineups[i].roster[j].name%></li>
				<%end%>
				</ul>
				<h5>Scores</h5>
				<ul>
					<li>Score: <%=@lineups[i].best_score.round(2)%></li>
				</ul>
				<h5>Total Budget</h5>
				<p>$<%=@lineups[i].price%></p>
			</div>
		<%end%>
		</div>
	</div>

	<div id='exposure' class='small-12 columns lineup-group'>
	<% @exposure.each do |pos, arr| %>
		<div class="small-6 medium-4 large-4 columns lineup">
			<h5><%=pos%></h5>
			<ul>
			<% for i in 0...arr.count do %>
				<li><%=arr[i]['name']%>:<%=arr[i]['perc'].round(1)%>%</li>
			<% end %>
			</ul>
		</div>
	<% end %>
	</div>
	<div id='scores' class='small-12 columns lineup-group'>
		<div class='small-3 medium-3 large-3 columns lineup'>
			<h5>Scores</h5>
			<ul>
				<li>Average: <%=@scores['avg'].round(2)%></li>
				<li>Total: <%=@scores['total'].round(2)%></li>
			</ul>
		</div>
	</div>
</div>