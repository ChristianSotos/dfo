<div id="container" class="row">
	<div id="best-lineups" class="small-12 columns lineup-group">
		<h2>Best Overall Lineups</h2>
		<div class="row">
		<%for i in 0...@bl.count do %>
			<div class="small-6 medium-4 large-2 columns lineup">
				<input type='checkbox'>
				<h5>Lineup <%=i+1%></h5>
				<ul>
				<% for j in 0...@bl[i].roster.count do%>
					<li><%=@bl[i].roster[j].position%>: <%=@bl[i].roster[j].name%></li>
				<%end%>
				</ul>
				<h5>Scores</h5>
				<ul>
					<li>Best Score: <%=@bl[i].best_score.round(2)%></li>
					<li>Average Score: <%=@bl[i].avg_score.round(2)%></li>
					<li>High Score: <%=@bl[i].max_score.round(2)%></li>
					<li>Low Score: <%=@bl[i].min_score.round(2)%></li>
				</ul>
				<h5>Total Budget</h5>
				<p>$<%=@bl[i].price%></p>
			</div>
		<%end%>
		</div>
	</div>
